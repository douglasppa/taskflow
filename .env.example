# This is an example .env file for the TaskFlow application.

# Application settings
API_V1_STR=/api/v1
PROJECT_NAME=TaskFlow
APP_VERSION=v1.0.0
ENVIRONMENT=local

# PostgreSQL connection
POSTGRES_USER=taskflow
POSTGRES_PASSWORD=secret
POSTGRES_DB=taskflow_db
POSTGRES_HOST=postgres
POSTGRES_PORT=5432

# Authentication settings
SECRET_KEY=your_secret_here
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=60

# RabbitMQ settings
RABBITMQ_URL=amqps://zmrmaehz:
RABBITMQ_USER=guest
RABBITMQ_PASS=guest

# MongoDB connection
MONGO_URL=mongodb://mongo_db:27017
MONGO_DB_NAME=taskflow
MONGO_DB_ATLAS_USER=user_here
MONGO_DB_ATLAS_PASSWORD=password_here

# Prometheus settings
PROMETHEUS_PORT=8000

# Feature flags
FEATURE_SIMULATE_TASK_LATENCY=true
FEATURE_ENABLE_SUMMARY_ENDPOINT=true